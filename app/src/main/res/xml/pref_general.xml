<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_node_name"
        android:inputType="text"
        android:key="node_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_node_name" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_hub_addr"
        android:inputType="textUri"
        android:key="hub_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_hub_addr" />

</PreferenceScreen>
